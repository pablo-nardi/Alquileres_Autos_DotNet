@model AlquileresAutos.Pages.Autos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Auto[0].Patente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auto[0].capacidadTanque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auto[0].kilometraje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auto[0].fechaCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auto[0].detalle)
            </th>
        </tr>
    </thead>
    <tbody>
