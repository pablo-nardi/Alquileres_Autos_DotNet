@page
@model AlquileresAutos.Pages.Autos.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Auto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Auto.ID" />
            <div class="form-group">
                <label asp-for="Auto.Patente" class="control-label"></label>
                <input asp-for="Auto.Patente" class="form-control" />
                <span asp-validation-for="Auto.Patente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auto.CapacidadTanque" class="control-label"></label>
                <input asp-for="Auto.CapacidadTanque" class="form-control" />
                <span asp-validation-for="Auto.CapacidadTanque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auto.Kilometraje" class="control-label"></label>
                <input asp-for="Auto.Kilometraje" class="form-control" />
                <span asp-validation-for="Auto.Kilometraje" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Fechastr" class="control-label">Fecha de Compra</label>
                <input type="date" asp-for="Fechastr" class="form-control" />
                <span asp-validation-for="Fechastr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auto.Detalle" class="control-label"></label>
                <input asp-for="Auto.Detalle" class="form-control" />
                <span asp-validation-for="Auto.Detalle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auto.ModeloID" class="control-label"></label>
                <select asp-for="Auto.ModeloID" class="form-control" 
                    asp-items="@Model.ModeloNombreSL">
                    <option value="">Seleccione un Modelo</option>
                </select>
                <span asp-validation-for="Auto.ModeloID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auto.Estado" class="control-label"></label>
                <select asp-for="Auto.Estado" class="form-control"
                        asp-items="@Model.EstadoAutoSL">
                 <option value="" >Selecciones un estado</option>>
                </select>
                <span asp-validation-for="Auto.Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auto.Sucursal" class="control-label"></label>
                <select asp-for="Auto.SucursalID" class="form-control"
                        asp-items="@Model.SucursalNombreSL">
                    <option value="">Selecciones una Sucursal</option>>
                </select>
                <span asp-validation-for="Auto.Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
