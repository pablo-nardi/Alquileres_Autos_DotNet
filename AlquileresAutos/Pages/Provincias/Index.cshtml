@page
@model AlquileresAutos.Pages.Provincias.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Denominacion</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Provincias) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denominacion)
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@if (Model.Localidades != null)
{
    <h3>Locadidaes De la Provincia Seleccionada</h3>
    <table class="table">
        <tr>
            <th>Nombre Localidad</th>
        </tr>
        @foreach(var item in Model.Localidades)
        {
            <tr>
                <td>
                    @item.Denominacion
                </td>
            </tr>
        }
    </table>
}
